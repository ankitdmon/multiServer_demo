{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2022",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true, // Set to true for stricter function type checking
    "noImplicitThis": true,      // Set to true for stricter 'this' type checking
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["app.ts", "router/**/*", "controller/**/*"],
  "exclude": ["node_modules", "build"]
}
